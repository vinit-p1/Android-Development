<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MultiWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:theme="@style/Theme.MultiWidget.AppWidgetContainer">

    <TextView
        android:id="@+id/playStatus"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="2dp"
        android:text="-" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="418dp"
        android:layout_height="116dp"
        android:layout_centerInParent="true"
        android:src="@drawable/note" />

    <ImageButton
        android:id="@+id/ytButton"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_below="@id/imageView"
        android:layout_alignEnd="@id/imageView"
        android:background="#E67373"
        android:contentDescription="Search videos in Youtube"
        android:src="@drawable/baseline_youtube_searched_for_24" />


    <ImageButton
        android:id="@+id/imageButton2"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="54dp"
        android:layout_height="63dp"
        android:layout_below="@id/imageView"
        android:layout_alignStart="@id/ytButton"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Up the image"
        android:src="@android:drawable/ic_popup_sync" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        android:layout_below="@id/imageView"
        android:layout_alignStart="@id/imageButton2"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Play music" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_next"
        android:layout_below="@id/imageView"
        android:layout_alignStart="@id/playButton"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Next music" />

    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_pause"
        android:layout_below="@id/imageView"
        android:layout_alignStart="@id/nextButton"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Stop music" />

</RelativeLayout>